    <div class="container-fluid">
      <div class="row">
        <div class="col-7">
            <ul id="messages"></ul>
        </div>
        <div class="col-5">
            <form action="">
                <input id="m" autocomplete="off" /><button>Send</button>
            </form>
        </div>
      </div>
        
        
